{% extends 'base.html.twig' %}

{% block title %}Login | MyBankApp{% endblock %}

{% block body %}
    <form method="post" >
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group w-50 m-auto pt-5 has-success">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label class="form-control-label" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" required autofocus>

            <label class="form-control-label" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn w-100 btn-primary mt-4" type="submit">
                Sign in
            </button>
        </div>
    </form>
{% endblock %}

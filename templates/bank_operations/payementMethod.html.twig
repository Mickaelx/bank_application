{% extends 'base.html.twig' %}

{% block title %} New category | MyBankApp{% endblock %}

{% form_theme formPayementMethod 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <section class="form w-50 m-auto pt-5">

        {{ form_start(formPayementMethod) }}
            {{ form_row(formPayementMethod.namePayement) }}
            <button type="submit" class="btn btn-success w-100">
                {% if editMode %}
                    Edit payement method
                {% else %}
                    Add payement method
                {% endif %}
            </button>
        {{ form_end(formPayementMethod) }}

    </section>

{% endblock %}